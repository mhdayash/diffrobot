<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <!-- Caster Wheel Link -->
    <link name="front_caster_wheel_link">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="${caster_wheel_radius}"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="${caster_wheel_radius}"/>
            </geometry>
        </collision>

        <xacro:inertial_sphere mass="${caster_wheel_mass}" radius="${caster_wheel_radius}">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_sphere>
    </link>

    <!-- Caster Wheel Joit -->
    <joint name="front_caster_wheel_joint" type="fixed">
        <origin xyz="${caster_wheel_offset_x} 0.0 ${caster_wheel_offset_z}" rpy="0.0 0.0 0.0"/>
        <parent link="chassis_link"/>
        <child link="front_caster_wheel_link"/>
    </joint>

    <!-- Caster Wheel Link -->
    <link name="back_caster_wheel_link">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="${caster_wheel_radius}"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="${caster_wheel_radius}"/>
            </geometry>
        </collision>

        <xacro:inertial_sphere mass="${caster_wheel_mass}" radius="${caster_wheel_radius}">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_sphere>
    </link>

    <!-- Caster Wheel Joit -->
    <joint name="back_caster_wheel_joint" type="fixed">
        <origin xyz="${back_caster_wheel_offset_x} 0.0 ${caster_wheel_offset_z}" rpy="0.0 0.0 0.0"/>
        <parent link="chassis_link"/>
        <child link="back_caster_wheel_link"/>
    </joint>


    <!-- Caster Holder (Only for visuals) -->
    <link name="caster_holder">
        <visual>
            <geometry>
                <cylinder radius="${caster_wheel_radius/2}" length="${caster_wheel_offset_z*2}"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>
    <joint name="holder_joint" type="fixed">
        <origin xyz="${caster_wheel_offset_x} 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="chassis_link"/>
        <child link="caster_holder"/>
    </joint>

    <link name="back_caster_holder">
        <visual>
            <geometry>
                <cylinder radius="${caster_wheel_radius/2}" length="${caster_wheel_offset_z*2}"/>
            </geometry>
            <material name="blue"/>
        </visual>
    </link>
    <joint name="back_holder_joint" type="fixed">
        <origin xyz="${back_caster_wheel_offset_x} 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="chassis_link"/>
        <child link="back_caster_holder"/>
    </joint>

    <gazebo reference="caster_wheel_link">
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>



</robot>